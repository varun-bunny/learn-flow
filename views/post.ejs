                      href="#"
                      class="action-item action-like active ml-3"
                      data-toggle="tooltip"
                      id="likeBtn"
                      data-original-title="Liked"
                    >
                      <i
                        class="fas fa-thumbs-up"
                        style="transform: scale(1.5)"
                      ></i>
                    </a>
                    <% } else { %>

                    <a
                      href="#"
                      onclick="like(`<%= post._id %>`)"
                      class="action-item action-like active ml-3"
                      data-toggle="tooltip"
                      id="likeBtn"
                      data-original-title="Like"
                    >
                      <i
                        class="far fa-thumbs-up"
                        style="transform: scale(1.5)"
                      ></i>
                    </a>
                    <% } %>

